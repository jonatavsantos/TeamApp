// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  codUser Int @id @default(autoincrement())
  name String
  email String
  password String
  mister Team[]
  userId Image?
}

model Team {
  codTeam Int @id @default(autoincrement())
  codUser User @relation(fields: [mister], references: [codUser])
  mister Int
  nameTeam String
  countryTeam String
  cityTeam String
  modality String @unique
  players Player[]
}

model Player {
  cpf Int @id @unique
  namePlayer String @unique
  years Int
  height Int
  weight Int
  countryPlayer String
  cityPlayer String
  team Team @relation(fields: [codTeam], references: [codTeam])
  codTeam Int
}

model Image {
  id Int @id @default(autoincrement())
  path String
  codUser User @relation(fields: [userId], references: [codUser])
  userId Int @unique
}