// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  codUser Int @id @default(autoincrement())
  name String
  email String
  password String
  mister Team[]
}

model Team {
  codTeam Int @id @default(autoincrement())
  nameTeam String
  countryTeam String
  cityTeam String
  modality String
  codUser User @relation(fields: [mister], references: [codUser])
  mister Int
  namePlayer Player @relation(fields: [player], references: [namePlayer])
  player String
}

model Player {
  cpf Int @id @unique
  namePlayer String @unique
  years Int
  height Int
  weight Int
  countryPlayer String
  cityPlayer String
  modality Team @relation(fields: [modalityPlayer], references: [modality])
  modalityPlayer String
  player Team[]
  modalityPl Team[]
}